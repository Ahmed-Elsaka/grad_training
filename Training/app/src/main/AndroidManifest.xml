<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.madara.training">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@drawable/logo3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:theme="@style/AppThemeNoAction">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="main page" />
        <activity
            android:theme="@style/AppThemeNoActiongreylight"
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:theme="@style/AppThemeNoActiongreylight"
            android:name=".LoginActivity"
            android:label="Login" />
        <activity android:name=".MyCards" />
        <activity android:name=".QRScanner" />
    </application>

</manifest>